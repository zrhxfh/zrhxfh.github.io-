宽度：30，
身高：30，
速度：2+Math.random()*2
                });
            }
        }

// 创建子弹
函数createBullet(){
if(gameRunning){
bullet.push({
X:player.x+player。宽度/2-2.5，
y:player.y，
宽度：5，
高度：10，
速度：7
                });
            }
        }

// 更新游戏状态
函数更新(){
if(！gameRunning)返回；

// 移动玩家
if(keys['ArrowLeft']&&player.x>0){
player.x-=player.speed；
            }
if(键['向右箭头']&&player.x<画布宽度-播放器宽度){
player.x+=player.speed；
            }
if(键["]){
if(！player.shooting){
createBullet()；
player.shooting=true；
                }
}else{
player.shooting=false；
            }

// 更新子弹
bullet.forEach((bullet，bulletIndex)=>{
bullet.y-=bullet.speed；
                
// 移除超出屏幕的子弹
if(bullet.y+bullet.high<0){
bullet.splice(bulletIndex，1)；
                }

// 检测子弹与敌人的碰撞
foreach((敌人，敌人索引)=>{
如果(
bullet.x<敌人.X+敌人.宽度&&
bullet.x+bullet.width>foremy.x&&
bullet.y<敌人.y+敌人.高度&&
bullet.y+bullet.height>firemy.y
) {
bullet.splice(bulletIndex，1)；
敌人.拼接(敌人索引，1)；
评分+=10分；
scoreElement.textContent='分数：${score}'；
                    }
                });
            });

// 更新敌人
敌人.foreach((敌人，索引)=>{
f敌.y+=敌方速度；

